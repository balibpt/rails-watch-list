<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://www.nerdly.co.uk/wp-content/uploads/2017/04/superheroes-banner.jpg);">
  <div class="container text-center">
    <h1>Save any kind of movie</h1>
  </div>
</div>
<div class="wrapper">
  <div class="d-flex justify-content-between align-items-center mb-2 mt-2">
    <h2>
      My lists
    </h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
  </div>
  <div class="d-flex align-items-center justify-content-between">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
        <%= link_to list.name, list_path(list), class: "text-decoration-none text-white" %>
        <%= link_to "Delete", list_path(list),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    <% end %>
  </div>
</div>
